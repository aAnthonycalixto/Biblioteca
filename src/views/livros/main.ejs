<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Livros</title>
</head>

<body>
    <div class="row bg-info p-3">
        <div class="col-10">
            <h5 class="fw-bold">Seja bem-vindo(a) <%= nome %>!</h5>
        </div>
        <div class="col-2">
            <a href="/logout"><button class="btn bg-info text-dark fw-bold">Sair</button></a>
        </div>
    </div>
    <div class="row p-5">
        <div class="col-10"></div>
        <div class="col-2">
            <a href="/formLivro"><button class="btn bg-info text-dark fw-bold">Cadastrar</button></a>
        </div>
    </div>
    <table class="table container col-4">
        <tr>
            <th>ID</th>
            <th>Título</th>
            <th>Autor</th>
            <th>Ano</th>
            <th>Status</th>
            <th>Ação</th>
        </tr>
        <% livro.forEach(item => { %>
            <tr>
                <td><%= item.id_livro %></td>
                <td><%= item.titulo %></td>
                <td><%= item.autor %></td>
                <td><%= item.ano %></td>
                <td><%= item.statos %></td>
                <td>
                    <a href="/livros/select/<%= item.id_livro %>"><button class="btn bg-success text-light">Editar</button></a>
                    <a href="/livros/deletar/<%= item.id_livro %>"><button class="btn bg-danger text-light">Excluir</button></a>
                </td>
            </tr>
        <% }) %>
    </table>
</body>

</html>